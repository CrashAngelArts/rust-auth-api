# Configurações do servidor
SERVER_HOST=127.0.0.1
SERVER_PORT=8080
RUST_LOG=info

# Configurações do banco de dados
DATABASE_URL=./data/auth.db

# Configurações de JWT
JWT_SECRET=seu_segredo_super_secreto_aqui_mude_em_producao
JWT_EXPIRATION=24h  # Tempo de expiração do token em horas

# Flag para habilitar/desabilitar serviço de email
EMAIL_ENABLED=false

# Configurações de email (Gmail)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=crashangelarts@gmail.com
EMAIL_PASSWORD=sua_senha_de_app_aqui
EMAIL_FROM=crashangelarts@gmail.com
EMAIL_FROM_NAME=API de Autenticação
EMAIL_BASE_URL=http://localhost:3000  # URL base para links em emails

# Configurações de segurança
PASSWORD_SALT_ROUNDS=10
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=60  # em segundos

# Novas configurações de segurança
USE_ARGON2=true  # Usar Argon2 em vez de bcrypt para hash de senhas
CSRF_ENABLED=true  # Habilitar proteção CSRF
SECURE_HEADERS_ENABLED=true  # Habilitar cabeçalhos de segurança HTTP
COOKIE_SECURE=false  # Cookies com flag Secure (true em produção)
COOKIE_SAME_SITE=Lax  # Política SameSite para cookies (Lax, Strict, None)

# Configurações de CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Configurações do administrador padrão (usado apenas na primeira execução)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=Admin@123
ADMIN_NAME=Administrador
